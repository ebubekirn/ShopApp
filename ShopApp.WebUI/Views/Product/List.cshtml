@model List<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
</head>
<body>
    <h1>@ViewBag.Category.Name</h1>

    <div>
        <p>@Model[0].Name</p>
        <p>@Model[0].Price</p>
        <p>@Model[0].Description</p>
    </div>

    <div>
        <p>@Model[1].Name</p>
        <p>@Model[1].Price</p>
        <p>@Model[1].Description</p>
    </div>
    
</body>
</html>
